<h2><%= link_to t(".create"), new_admin_site_path, class: "btn btn-success" %></h2>

<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th><%= t('.name') %></th>
    <th><%= t('.domain') %></th>
    <th><%= t('.locale') %></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @sites.each do |site| puts %>
    <tr>
      <td><%= site.name %></td>
      <td><%= site.domain %></td>
      <td><%= site.locale %></td>
      <td><%= link_to t(".edit"), edit_admin_site_path(site), class: "btn btn-small" %></td>
      <td>
        <%= link_to t(".delete"), [:admin, site], data: { confirm: t('.confirm_delete') }, method: :delete, class: "btn btn-small btn-danger" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>