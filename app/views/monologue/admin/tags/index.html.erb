<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= t(".name")%></th>
      <th><%= t(".posts_count")%></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tags.each do |tag|%>
      <tr>
        <td><%= link_to tag.name, edit_admin_tag_path(tag) %></td>
        <td><span class="label"><%= tag.posts_count %></span></td>
        <td><%= link_to t(".edit"), edit_admin_tag_path(tag), class: "btn btn-small" %></td>
        <td><%= link_to t(".delete"), [:admin, tag],data: {confirm: 'Are you sure?'}, method: :delete, class: "btn btn-small btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
